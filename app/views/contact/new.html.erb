<div class="jumbotron">
    <div class="page-header">
        <h2>Contact Us</h2>
    </div>

    <h4>Drop us a quick note on feature request, feedbacks or anything!</h4>

    <%= form_for @message, :url => contact_path do |form| %>
        <div class="field">
            <%= form.text_field :name, :class => "span6", :placeholder => "Name" %>
        </div>

        <div class="field">
            <%= form.text_field :email, :class => "span6", :placeholder => "Email" %>
        </div>
        <div class="field">
            <%= form.text_field :subject, :class => "span6", :placeholder => "Subject" %>
        </div>

        <div class="field">
            <%= form.text_area :body, :class => "span6", :placeholder => "What can we help you with?", :rows => "10" %>
        </div>

        <fieldset class="actions">
            <%= form.submit "Send", :class => "btn btn-primary btn-large" %>
        </fieldset>
    <% end %>
</div>

